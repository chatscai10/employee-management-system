{
  "encryption": {
    "atRest": "AES-256",
    "inTransit": "TLS 1.3",
    "keyRotation": "90days"
  },
  "access": {
    "authentication": "certificate-based",
    "authorization": "role-based",
    "auditLogging": true,
    "connectionTimeout": 30
  },
  "backup": {
    "encrypted": true,
    "schedule": "daily",
    "retention": "30days",
    "offsite": true
  }
}