{
  "version": 2,
  "name": "employee-management-system",
  "functions": {
    "api/index.js": {
      "runtime": "nodejs18.x",
      "memory": 512,
      "maxDuration": 10,
      "environment": {
        "NODE_ENV": "production"
      }
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "build": {
    "env": {
      "NODE_VERSION": "18"
    }
  }
}