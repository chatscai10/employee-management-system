{
  "version": 2,
  "name": "employee-management-system",
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.js"
    }
  ],
  "functions": {
    "app.js": {
      "runtime": "nodejs20.x",
      "environment": {
        "NODE_ENV": "production"
      }
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}